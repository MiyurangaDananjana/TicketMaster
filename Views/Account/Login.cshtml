@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}
<style>
    /* Container background & spacing */
    .container.mt-5 {
        background: white !important;
        padding: 30px 0;
        min-height: 100vh;
    }

    /* Center the card */
    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px 25px;
        background-color: #fff;
        max-width: 400px; /* smaller width */
        margin: auto;
    }

    /* Title */
    .card-title {
        font-weight: 700;
        font-size: 1.5rem; /* smaller */
        margin-bottom: 1rem;
        color: #333;
    }

    /* Make icons black */
    .card-body i.fas {
        color: #000 !important;
        font-size: 0.9rem; /* smaller icons */
    }

    /* Input group icons */
    .input-group-text {
        background-color: #e9ecef;
        border: none;
        color: #000;
        font-size: 1rem;
        padding: 0.375rem 0.75rem;
    }

    /* Inputs */
    .form-control {
        border-radius: 0 0.375rem 0.375rem 0;
        border-left: none;
        height: 36px; /* smaller height */
        font-size: 0.9rem;
    }

    /* Button */
    .btn-primary {
        background-color: #000;
        border-color: #000;
        font-weight: 600;
        font-size: 1rem;
        padding: 8px 0;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #333;
            border-color: #333;
        }

    /* Error alert */
    .alert-danger {
        font-weight: 600;
        font-size: 0.85rem;
        border-radius: 5px;
    }

    /* Image sizing */
    .card-body .text-center img {
        width: 50px; /* smaller image */
        height: auto;
        margin-bottom: 10px;
    }

    /* Labels */
    .form-label {
        font-size: 0.9rem;
        font-weight: 600;
    }
</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="~/images/account.gif" width="50" height="50">
                        <h2 class="card-title">Login</h2>
                    </div>

                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />

                        <div class="mb-3">
                            <label class="form-label">
                                Email:
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                Password:
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary px-4">
                                Log In
                            </button>
                        </div>
                    </form>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @string.Join(", ", ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage))
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>