@model IEnumerable<Invitation>
@{
    ViewData["Title"] = "Deleted Invitations";
}

<link rel="stylesheet" href="~/css/invitation-styles.css" />

<div class="invitation-container">
    <div class="header-section">
        <h2 class="page-title">
            <i class="fas fa-trash-alt"></i>
            Deleted Invitations
        </h2>
        <p class="page-subtitle">Restore or permanently delete invitations</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="invitation-form">
        <!-- Stats Section -->
        <div class="form-section">
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-trash"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">@Model.Count()</h3>
                        <p class="stat-label">Deleted Invitations</p>
                    </div>
                </div>
                @if (Model.Any())
                {
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-content">
                            <h3 class="stat-number">@Model.OrderBy(x => x.DeletedAt).FirstOrDefault()?.DeletedAt?.ToString("MMM dd")</h3>
                            <p class="stat-label">Oldest Deletion</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Search Section -->
        <div class="form-section">
            <h4 class="section-title">Search Deleted Invitations</h4>
            <div class="form-row">
                <div class="form-group">
                    <label for="searchInput" class="form-label">
                        <i class="fas fa-search"></i>
                        Search
                    </label>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search by name, code, or type..." />
                </div>
            </div>
            <div class="results-counter" id="resultsCounter">
                Showing @Model.Count() of @Model.Count() records
            </div>
        </div>

        <!-- Table Section -->
        <div class="form-section">
            <h4 class="section-title">Deleted Records</h4>
            <div class="table-responsive">
                <table class="invitation-table" id="deletedTable">
                    <thead class="table-header">
                        <tr>
                            <th>ID</th>
                            <th>Inviter Name</th>
                            <th>Issued Code</th>
                            <th>Unique Code</th>
                            <th>Deleted At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-body">
                        @foreach (var item in Model)
                        {
                            <tr class="table-row" data-inviter="@item.InviterName.ToLower()" data-code="@item.UniqCode.ToLower()">
                                <td class="table-cell">
                                    <span class="cell-content">#@item.Id</span>
                                </td>
                                <td class="table-cell">
                                    <div class="inviter-info">
                                        <i class="fas fa-user inviter-icon"></i>
                                        <span class="inviter-name">@item.InviterName</span>
                                    </div>
                                </td>
                                <td class="table-cell">
                                    <span class="issued-code">@item.Issued</span>
                                </td>
                                <td class="table-cell">
                                    <div class="unique-code">
                                        <span class="code-text">@item.UniqCode</span>
                                    </div>
                                </td>
                                <td class="table-cell">
                                    <span class="issued-code text-danger">
                                        <i class="fas fa-calendar-times"></i>
                                        @item.DeletedAt?.ToString("yyyy-MM-dd HH:mm:ss")
                                    </span>
                                </td>
                                <td class="table-cell">
                                    <div class="action-buttons">
                                        <button type="button" class="btn-small btn-success" onclick="restoreInvitation(@item.Id, '@item.UniqCode')" title="Restore">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                        <button type="button" class="btn-small btn-danger" onclick="permanentDelete(@item.Id, '@item.UniqCode')" title="Permanent Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-trash-restore"></i>
                    </div>
                    <h3>No deleted invitations</h3>
                    <p>All invitations are active. Deleted items will appear here.</p>
                    <a href="@Url.Action("IssuedList", "Home")" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i>
                        Back to Active Invitations
                    </a>
                </div>
            }
        </div>

        <!-- Back Button -->
        <div class="form-actions">
            <a href="@Url.Action("IssuedList", "Home")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Back to Active Invitations
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const totalRecords = @Model.Count();

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function () {
            filterTable();
        });

        function filterTable() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('.table-row');
            let visibleCount = 0;

            rows.forEach(row => {
                const inviterName = row.dataset.inviter;
                const uniqueCode = row.dataset.code;

                const matchesSearch = !searchTerm ||
                    inviterName.includes(searchTerm) ||
                    uniqueCode.includes(searchTerm);

                row.style.display = matchesSearch ? '' : 'none';
                if (matchesSearch) visibleCount++;
            });

            updateResultsCount(visibleCount);
        }

        function updateResultsCount(visibleCount) {
            const resultsCounter = document.getElementById('resultsCounter');
            resultsCounter.innerHTML = `
                <i class="fas fa-info-circle"></i>
                Showing <strong>${visibleCount}</strong> of <strong>${totalRecords}</strong> records
            `;

            if (visibleCount < totalRecords) {
                resultsCounter.className = 'results-counter filtered';
            } else {
                resultsCounter.className = 'results-counter';
            }
        }

        // Restore invitation
        function restoreInvitation(id, code) {
            if (confirm(`Are you sure you want to restore invitation "${code}"?\n\nThe invitation will be moved back to the active list.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("RestoreInvitation", "Home")';

                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = id;

                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Permanent delete
        function permanentDelete(id, code) {
            if (confirm(`⚠️ WARNING: Are you sure you want to PERMANENTLY delete invitation "${code}"?\n\nThis action CANNOT be undone! The invitation will be removed from the database forever.`)) {
                if (confirm(`This is your final confirmation. Permanently delete "${code}"?`)) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("PermanentDeleteInvitation", "Home")';

                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'id';
                    input.value = id;

                    form.appendChild(input);
                    document.body.appendChild(form);
                    form.submit();
                }
            }
        }

        // Toast notification
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;

            const iconMap = {
                'success': 'check-circle',
                'error': 'exclamation-circle',
                'warning': 'exclamation-triangle',
                'info': 'info-circle'
            };

            toast.innerHTML = `
                <i class="fas fa-${iconMap[type] || 'info-circle'}"></i>
                <span>${message}</span>
            `;

            document.body.appendChild(toast);

            requestAnimationFrame(() => {
                toast.classList.add('show');
            });

            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (toast.parentNode) {
                        document.body.removeChild(toast);
                    }
                }, 300);
            }, 3000);

            toast.addEventListener('click', () => {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (toast.parentNode) {
                        document.body.removeChild(toast);
                    }
                }, 300);
            });
        }
    </script>
}
